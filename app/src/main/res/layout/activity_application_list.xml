<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.phonehelper.activitys.ApplicationListActivity">
    <com.example.administrator.phonehelper.widgets.TopBar
        android:id="@+id/top_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        custom:leftTextColor="#FFFFFF"
        custom:leftBackground="@mipmap/btn_homeasup_default"
        custom:titleTextSize="8dp"
        custom:titleTextColor="#000000"
        >
    </com.example.administrator.phonehelper.widgets.TopBar>
    <ListView
        android:id="@+id/lv_applicationList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_header"
        android:layout_above="@+id/btn_deleteSelectApp">
    </ListView>
    <Button
        android:id="@+id/btn_deleteSelectApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_btn_10dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:text="@string/deleteSelectApp"/>
</RelativeLayout>
