<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/yellow"
    android:padding="3dp">


    <ImageView
        android:id="@+id/img_appICON"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cBox_isDelete"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_png" />

    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="wolegequ"
        android:textSize="16sp"
        android:layout_alignTop="@+id/img_appICON"
        android:layout_toEndOf="@+id/img_appICON" />

    <TextView
        android:id="@+id/tv_rubbish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/img_appICON"
        android:layout_alignStart="@+id/tv_appName" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgbn_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/icon_cleancache" />
</RelativeLayout>
